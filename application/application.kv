#:import C kivy.utils.get_color_from_hex

# #474646 - primary color
# #999999 - secondary color

<PopupButton@Button>:
	size_hint: 1, 0.4
	background_normal: ''
	background_down: ''
	border: (4,4,4,4)
	font_name: 'consola'


<PopupLabel@Label>:
	bold: True
	pos_hint: {"top": 0.8}
	font_name: 'consola'
	halign: 'center'

<CustomPopup>:
	size_hint: None, None
	size: 300, 150
	auto_dismiss: False
	title_align: 'center'
	title_font: 'consola'

<PopupError>:
	title: "ERROR, PLEASE READ CAREFULLY."
	background_color: C('#CC1212')
	title_color: C("#CC1212")
	separator_color: C("#CC1212")

	GridLayout:
		cols: 1
		PopupLabel:
			id: error_label
		PopupButton:
			text: "CLOSE"
			background_color: C('#CC1212')
			on_press: self.background_color = C('#8a1111')
			on_release: root.dismiss()

<PopupInfo>:
	title: "INFO, PLEASE READ CAREFULLY."
	background_color: C('#11bf40')
	title_color: C("#11bf40")
	separator_color: C("#11bf40")

	GridLayout:
		cols: 1
		PopupLabel:
			id: info_label
		PopupButton:
			text: "CLOSE"
			background_color: C('#11bf40')
			on_press: self.background_color = C('#0a802a')
			on_release: root.dismiss()

<PopupQuit>:
	title: "LEAVING SO SOON?"
	background_color: C('#999999')
	title_color: C("#999999")
	separator_color: C("#999999")

	GridLayout:
		cols: 1
		PopupLabel:
			id: quit_label
		GridLayout:
			cols: 3
			size_hint: 1, 0.4
			PopupButton:
				id: quit_button
				text: "QUIT"
				background_color: C('#474646')
				on_press: self.background_color = C('#999999')
				on_release: 
					root.quit_app()
					app.stop()
			GridLayout:
				cols: 1
				size_hint: 0.4, 1
			PopupButton:
				id: cancel_button
				text: "NO"
				background_color: C('#474646')
				on_press: self.background_color = C('#999999')
				on_release: root.dismiss()

<CustomButton@Button>:
	bold: True
	background_color: C('#474646')
	background_normal: ''
	background_down: ''
	border: (4,4,4,4)
	on_press: self.background_color = C('#999999')
	on_release: self.background_color = C('#474646')
	font_name: 'consola'

<CustomLabel@Label>:
	bold: True
	font_name: 'consola'
	halign: 'left'

<CustomTextInput@TextInput>:
	multiline: False
	font_name: 'consola'
	border: (4,4,4,4)

WindowManager:
	MainWindow:
	OutputWindow:
	AddProcess:
	OverallStats:
	AppUsage

<MainWindow>:
	name: 'main'

	GridLayout:
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: 'images/background.jpg'
		
		cols: 1
		size: root.width, root.height
		GridLayout:
			cols: 4
			size_hint: 1, 0.16
			CustomButton:
				text: 'OUTPUT LOG'
				on_release:
					root.manager.transition.direction = 'up'
					app.root.current = 'output'
			CustomButton:
				text: 'CREATE PROCESS'
				on_release:
					root.manager.transition.direction = 'up'
					app.root.current = 'add_process'
			CustomButton:
				text: 'OVERALL STATS'
				on_release:
					root.manager.transition.direction = 'up'
					app.root.current = 'stats'
			CustomButton:
				text: 'APP USAGE'
				on_release:
					root.manager.transition.direction = 'up'
					app.root.current = 'usage'

		GridLayout:
			cols: 1
			Label:
				text: 'WELCOME TO\nPROCESS WATCHER'
				font_name: 'consola'
				font_size: 32
				bold: True
				halign: 'center'

		CustomButton:
			size_hint: 1, 0.16
			text: 'Footer BY Sule'


<MainGrid@GridLayout>:
	pos_hint: {'y' : 0.12 }
	size_hint: 1, 0.76


<OutputWindow>:
	name: 'output'
	output: output

	MainGrid:
		cols: 1
		CustomTextInput:
			id: output
			readonly: True

<AddProcess>:
	name: 'add_process'
	proc_name: proc_name
	proc_caption: proc_caption
	proc_type: proc_type
	MainGrid:
		cols: 1
		GridLayout:
			cols: 3
			GridLayout:
				size_hint: 0.4, 1
				cols: 1

			GridLayout:
				cols: 1
				GridLayout:
					cols: 1
					size_hint: 1, 0.15

				GridLayout:
					cols: 1
					CustomLabel:
						text: 'Input name of new process:'
					CustomTextInput:
						id: proc_name

					CustomLabel:
						text: 'Input caption of new process:'
					CustomTextInput:
						id: proc_caption

					CustomLabel:
						text: 'Input type of new process:'
					CustomTextInput:
						id: proc_type

				GridLayout:
					cols: 1
					size_hint: 1, 0.1

				GridLayout:
					cols: 1
					size_hint: 1, 0.15
					CustomButton:
						text: 'ADD TO DB'
						size_hint: 1, 0.45
						on_release:
							root.add_process()

				GridLayout:
					cols: 1
					size_hint: 1, 0.15

			GridLayout:
				size_hint: 0.4, 1
				cols: 1


<OverallStats>:
	name: 'stats'
	stats_output: stats_output
	MainGrid:
		cols: 3
		GridLayout:
			cols: 1
			size_hint: 0.2, 1

		GridLayout:
			cols: 1
			GridLayout:
				cols: 1
				size_hint: 1, 0.2

			GridLayout:
				cols: 1
				CustomTextInput:
					id: stats_output
					readonly: True
				CustomButton:
					size_hint: 1, 0.2
					text: 'GET STATS'
					on_release:
						root.get_stats()

			GridLayout:
				cols: 1
				size_hint: 1, 0.2

		GridLayout:
			cols: 1
			size_hint: 0.2, 1


<AppUsage>:
	name: 'usage'
	app_input: app_input
	app_output: app_output

	MainGrid:
		cols: 3
		GridLayout:
			cols: 1
			size_hint: 0.2, 1

		GridLayout:
			cols: 1
			GridLayout:
				cols: 1
				size_hint: 1, 0.2

			GridLayout:
				cols: 1
				CustomLabel:
					text: 'NAME OF APP YOU WANT TO SEE USAGE FOR:'
					size_hint: 1, 0.2
				CustomTextInput:
					id: app_input
					multiline: False
					size_hint: 1, 0.2
				CustomTextInput:
					id: app_output
					multiline: True
					readonly: True

				CustomButton:
					size_hint: 1, 0.2
					text: 'GET USAGE'
					on_release:
						root.get_usage()

			GridLayout:
				cols: 1
				size_hint: 1, 0.2

		GridLayout:
			cols: 1
			size_hint: 0.2, 1